                android:id="@+id/pay_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/cx_btn_blue_selector"
                android:text="@string/bx_pay_alipay_btn" />
        </LinearLayout>

        <TextView
            android:id="@+id/bx_pay_about"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/bx_tip_phone"
            android:text="@string/bx_pay_tip4"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="20dp" />
    </LinearLayout>

