        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/bx_pay_money_other_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/bx_pay_alipay_other_money"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@android:color/darker_gray" 
                android:visibility="gone"/>

            <EditText
                android:id="@+id/bx_pay_moeny_other"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/bx_pay_money_other_title"
                android:background="@drawable/bx_edit_bg"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:paddingLeft="10dp"
                android:maxLength="4"
                android:inputType="numberDecimal"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bx_pay_moeny_other"
                android:layout_toRightOf="@+id/bx_pay_money_other_title"
                android:text="@string/bx_pay_alipay_money_hint"
                android:textColor="@android:color/darker_gray" 
                android:visibility="gone"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bx_pay_alipay_money"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone" />

            <TextView
                android:id="@+id/bx_pay_money"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="#F6731D" />
        </LinearLayout>

